
@{
    ViewData["Title"] = "客户";
}



<div class="box box-success ">
    <div class="box-header with-border">
        <i class="fa fa-users  text-success"></i>
        <h3 class="box-title">客户</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">所有客户</a></li>
                <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">新增客户</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <div class="box box-default">
                        <!-- 查询栏 -->
                        <div class="row" style="margin-top:5px">
                            <div class="col-md-2 form-inline" id="EmployeeDiv">
                                <label>员工</label>
                                <select class="form-control" id="EmployeeIDByFind" name="EmployeeIDByFind" style="width:200px">
                                </select>
                            </div>

                            <div class="col-md-2 form-inline">
                                <label>类别</label>
                                <select class="form-control" id="CustomerSegmentationIDByFind" name="CustomerSegmentationIDByFind" style="width:200px">
                                </select>
                            </div>

                            <div class="col-md-2 form-inline">
                                <label>客户名称</label>
                                <input type="text" class="form-control" id="CustomerNameByFind" value="" placeholder="请输入客户名称..." />
                            </div>

                            <div class="col-md-2 form-inline">
                                <label>开始时间</label>
                                <input type="text" class="form-control" id="StartTimeByFind" value="" placeholder="请输入开始时间..." />
                            </div>
                            <div class="col-md-2 form-inline">
                                <label>结束时间</label>
                                <input type="text" class="form-control" id="EndTimeByFind" value="" placeholder="请输入结束时间..." />
                            </div>
                            <div class="col-md-1 form-inline">

                                <button class="btn btn-default" style="margin-top:24px" onclick="FindToCustomers()">立即查询</button>
                            </div>

                        </div>  <!-- 查询栏 -->
                        <table id="NoRealCustomer" lay-filter="table"></table>
                    </div>
                </div>
                <div class="tab-pane" id="tab_2">
                    <!-- 新建 -->
                    <div class="box box-default">

                        <!-- form start -->
                        <div >
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-4 ">

                                        <div class="form-group">
                                            <label for="exampleInputEmail1">选择潜在客户</label>
                                            <select class="form-control" id="NoRealCustomerSelect" onchange="GetCustomerDetal(this.value)" name="NoRealCustomerSelect">
                                            </select>
                                            <label for="exampleInputEmail1">客户名称</label>
                                            <input type="text" class="form-control" id="Name" name="Name"  >

                                        </div>

                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">联系地址</label>
                                            <input type="text" class="form-control" id="Address" name="Address"  disabled>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">电话号码</label>
                                            <input type="text" class="form-control" id="Phone" name="Phone" disabled >
                                        </div>
                                    </div>
                                </div>


                                <div class="row  ">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">邮箱</label>
                                            <input type="text" class="form-control" id="Email" name="Email" disabled >
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">别名</label>
                                            <input type="text" class="form-control" id="Alias" name="Alias"  disabled >
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <img id="LogoImage" src="~/Img/logo.png" alt="选中的Logo" style="height:100px;margin-top:-48px" class="img-responsive" />
                                    </div>
                                </div>
                                <div class="row box box-default" style="margin-top:10px">
                                    <div class="col-md-8 table-responsive" id="TableDiv" style="margin-top:10px;height:270px;overflow:auto">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>商品编号</th>
                                                    <th>商品标题</th>
                                                    <th>商品单价</th>
                                                    <th>商品数量</th>
                                                    <th>总价</th>
                                                </tr>
                                            </thead>
                                            <tbody id="ProductTable">
                                              
                                            </tbody>
                                        </table>
                                        

                                    </div>

                                    <div class="col-md-4" style="margin-top:10px">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">选择商品</label>
                                            <select class="form-control" id="Product" onchange="GetProductDetail(this.value)">
                                            </select>

                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-3">
                                                <label for="exampleInputPassword1">单价</label>
                                                <input type="text" class="form-control" id="Price"   disabled>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="exampleInputPassword1">数量</label>
                                                <input type="text" class="form-control" id="Number"  >
                                            </div>
                                            <div class="col-md-4">
                                                <label for="exampleInputPassword1">总价</label>
                                                <input type="text" class="form-control" id="TotalPrice" disabled  >
                                            </div>
                                            <div class="col-md-2">
                                                <label for="exampleInputPassword1">操作</label>
                                                <button class="btn btn-danger" onclick="Buy()">购买</button>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleInputPassword1">总价</label>
                                            <input type="text" class="form-control" id="AllTotalPrice"  disabled>
                                        </div>

                                    </div>
                                  
                                </div>

                            </div><!-- /.box-body -->

                            <div class="box-footer">
                                <button type="button" onclick="PostCustomer()" class="btn btn-primary">提交</button>
                            </div>
                        </div>
                    </div><!-- 新建 -->
                </div>

            </div>
        </div>



    </div><!-- /.box-body -->
</div>


