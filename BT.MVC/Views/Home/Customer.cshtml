@section Scripts{


    <script>
        //——————————————————文本框查询，客户反填——————————————————————————————————————

        var customerArr = [];  //客户数组

        //初始化员工下拉框
        $(function () {

            GetCustomerSelect("");
        })

        //下拉框改变事件
        function GetCustomerDetal(value) {
            for (var i = 0; i < customerArr.length; i++) {
                if (customerArr[i].id == value) {
                    $("#Name").val(customerArr[i].name);
                    $("#Address").val(customerArr[i].address);
                    $("#Phone").val(customerArr[i].phone);
                    $("#Email").val(customerArr[i].email);
                    $("#Alias").val(customerArr[i].alias);

                    $("#LogoImage").attr("src", customerArr[i].image);

                }
            }
        }



        //文本框键盘按起事件
        $("#Name").keyup(function () {
            var name = $("#Name").val();
            GetCustomerSelect(name);

        })

        //获取员工下拉框封装
        function GetCustomerSelect(name) {


            var token = $.cookie("token");

            //员工下拉框
            $.ajax({
                url: baseUrl + '/api/customers/norealCustomers?name=' + name,
                type: 'get',
                contentType: "application/json",
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {
                    customerArr = res;

                    $("#NoRealCustomerSelect").empty();

                    $(res).each(function () {
                        var line = '<option value="' + this.id + '">' + this.name + '</option>';
                        $("#NoRealCustomerSelect").append(line);
                    });

                }

            }).fail(function () {
                layer.close(index);
            }) //员工下拉框

        }


    </script>

    <script>

        //——————————————————商品相关操作——————————————————————————————————————

        var productArr = []; //商品数组

        var tableProductArr = [];

        //自动计算价格事件
        $("#Number").keyup(function () {
            var price = $("#Price").val();
            var number = $("#Number").val();

            var res = parseFloat(price) * parseFloat(number);

            $("#TotalPrice").val(res);
        });


        //初始化加载商品
        $(function () {

            var token = $.cookie("token");

            //商品下拉框
            $.ajax({
                url: baseUrl + '/api/products',
                type: 'get',
                contentType: "application/json",
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {

                    productArr = res;

                    $("#Product").empty();
                    $("#Product").append('<option value="0">请选择</option>');

                    $(res).each(function () {
                        var line = '<option value="' + this.id + '">' + this.title + '</option>';
                        $("#Product").append(line);
                    });

                }

            }).fail(function () {
            }) //商品下拉框

        });


        //下拉框改变事件单价反填
        function GetProductDetail(value) {
            $("#Price").val(0);
            $("#Number").val(0);


            $("#TotalPrice").val(0);



            for (var i = 0; i < productArr.length; i++) {
                if (productArr[i].id == value) {

                    $("#Price").val(productArr[i].price);

                }
            }

        }

        //点击购买事件
        function Buy() {

            var productObj = {};
            productObj.id = parseInt($("#Product").val()); //商品ID

            productObj.price = parseFloat($("#Price").val());  //单价

            productObj.number = parseInt($("#Number").val()); //数量

            productObj.totalPrice = parseFloat($("#TotalPrice").val());//总价

            productObj.title = "";  //表特
            for (var i = 0; i < productArr.length; i++) {
                if (productArr[i].id == productObj.id) {
                    productObj.title = productArr[i].title;
                }
            }

            tableProductArr.push(productObj);  //往表格的数据加数据

            var price = 0;

            $("#ProductTable").empty();   //表格渲染
            $(tableProductArr).each(function () {

                var line = '<tr>'
                    + '<td>' + this.id + '</td>'
                    + '<td>' + this.title + '</td>'
                    + '<td>' + this.price + '</td>'
                    + '<td>' + this.number + '</td>'
                    + '<td>' + this.totalPrice + '</td>'
                    + '</tr>';
                $("#ProductTable").append(line);
                price = parseFloat(price) + parseFloat(this.totalPrice);
            });

            var div = document.getElementById('TableDiv');
            div.scrollTop = div.scrollHeight;


            $("#AllTotalPrice").val(price);  //全部总价格


            $("#Number").val(0);
            $("#TotalPrice").val(0);
        }

    </script>


    <script>




//——————————————————新增订单操作——————————————————————————————————————
        function PostCustomer() {
            var customerID = $("#NoRealCustomerSelect").val(); //客户ID
            var totalPrice =   $("#AllTotalPrice").val();  //全部总价格

            var orderProducts = tableProductArr;


            var token = $.cookie("token");

            //新增订单
            $.ajax({
                url: baseUrl + '/api/orders',
                type: 'post',
                contentType: "application/json",
                data: JSON.stringify({ orderCreateDto: { CustomerID: parseInt(customerID), TotalPrice: parseFloat(totalPrice) }, ProductsCreateDtos: orderProducts }),
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {


                    layer.msg("新增订单成功！", { icon: 1 }, function () {   //添加成功后的相关操作

                        layer.confirm("需要清空文本内容吗？", { icon: 3 }, function (index) {

                            location.href = "/Home/Customer";
                            layer.close(index);
                        });


                        //表格重载
                        layui.use(['table'], function () {
                            var table = layui.table; //where可以传我们像传的任何参数
                            table.reload("NoRealCustomer", {
                                url: baseUrl + '/api/customers/noreal?status=1', where: {
                                    headers: { "Authorization": "Bearer " + token }
                                }
                            });
                        });


                    });//添加成功后的相关操作
                }

            }).fail(function () {
            }) //新增订单
         }





        //——————————————————查询，layui表格重载——————————————————————————————————————
        function FindToCustomers() {
            var employeeIDByFind = $("#EmployeeIDByFind").val();
            var customerSegmentationIDByFind = $("#CustomerSegmentationIDByFind").val();
            var customerNameByFind = $("#CustomerNameByFind").val();
            var startTimeByFind = $("#StartTimeByFind").val();
            var endTimeByFind = $("#EndTimeByFind").val();


            var token = $.cookie("token");
            //表格重载
            layui.use(['table'], function () {
                var table = layui.table; //where可以传我们像传的任何参数
                table.reload("NoRealCustomer", {
                    url: baseUrl + '/api/customers/noreal?employeeIDByFind=' + employeeIDByFind + '&customerSegmentationIDByFind=' + customerSegmentationIDByFind
                        + '&customerNameByFind=' + customerNameByFind + '&startTimeByFind=' + startTimeByFind + '&endTimeByFind=' + endTimeByFind + '&status=1', where: {
                            headers: { "Authorization": "Bearer " + token }
                        }
                });
            });
        }
    </script>


    <script>
        //——————————————————Layui表格渲染——————————————————————————————————————

        layui.use(['table', 'form', 'laydate'], function () {
            var token = $.cookie("token");
            var laydate = layui.laydate;

            var table = layui.table;
            var form = layui.form;

            laydate.render({
                elem: "#StartTimeByFind",
                type: "datetime"
            })

            laydate.render({
                elem: "#EndTimeByFind",
                type: "datetime"
            })


            //表格渲染
            table.render({
                elem: '#NoRealCustomer'
                , url: baseUrl + '/api/customers/noreal?status=1'  //数据接口
                , headers: { "Authorization": "Bearer " + token }
                , cols: [[ //表头
                    { type: "checkbox" }
                    , { field: 'id', title: '编号', width: 80 }
                    , { field: 'name', title: '客户名称' }
                    , { field: 'phone', title: '联系电话' }
                    , { field: 'email', title: '联系邮箱' }
                    , { field: 'address', title: '联系地址' }
                    , { field: 'alias', title: '客户别名' }
                    , { field: 'customerSegmentationID', title: '细分类别ID', hide: true }
                    , { field: 'customerSegmentationName', title: '细分类别名称', templet: "#CustomerSegmentationNameTemplet" }
                    , { field: 'remark', title: '备注' }
                    , { field: 'employeesID', title: '员工ID', hide: true }
                    , { field: 'isReal', title: '是否潜在客户', hide: true }
                    , { field: 'isDel', title: '是否删除', hide: true }
                    , { field: 'image', title: '客户Logo', templet: "#ImageTemplet" }
                    , { field: 'createTime', title: '创建时间' }
                ]]
                , page: true
                , toolbar: "#toolbar"
                , defaultToolbar: ['filter', 'exports']
            });


            //监听事件
            table.on('toolbar(table)', function (obj) {
                var checkStatus = table.checkStatus("NoRealCustomer"); //获取表格选中的行
                var data = checkStatus.data;//获取选中数据
                ;
                switch (obj.event) {
                    case 'addLinkMan':
                        layer.msg('添加联系人');
                        break;
                    case 'delete':  //删除
                        if (true) {
                            //拿到选中的所有id
                            var idsarr = [];
                            for (var i = 0; i < data.length; i++) {
                                idsarr.push(data[i].id);
                            }
                            if (idsarr.length == 0) {
                                layer.msg("请至少选中一个！", { icon: 2 });
                                return;
                            }

                            //ajax事件
                            layer.confirm("确定要删除嘛？", { icon: 3 }, function (index2) {
                                var index = layer.load();
                                var token = $.cookie("token");
                                //删除ajax
                                $.ajax({
                                    url: baseUrl + '/api/customers/delete?ids=' + idsarr.toString(),
                                    type: 'delete',
                                    contentType: "application/json",
                                    headers: { "Authorization": "Bearer " + token },
                                    success: function (res) {
                                        layer.close(index);

                                        layer.msg("删除成功！共删除了" + res + "条数据！", { icon: 1 }, function () {
                                            //表格重载
                                            layui.use(['table'], function () {
                                                var table = layui.table; //where可以传我们像传的任何参数
                                                table.reload("NoRealCustomer", {
                                                    url: baseUrl + '/api/customers/noreal?status=1', where: {
                                                        headers: { "Authorization": "Bearer " + token }
                                                    }
                                                });
                                            });
                                        });

                                    }

                                }).fail(function () {
                                    layer.close(index);
                                })//类别下拉框

                                layer.close(index2);
                            });


                        }
                        break;
                    case 'update':  //修改
                        if (true) {
                            //拿到选中的所有id
                            var idsarr = [];
                            for (var i = 0; i < data.length; i++) {
                                idsarr.push(data[i].id);
                            }
                            if (idsarr.length == 0) {
                                layer.msg("请至少选中一个！", { icon: 2 });
                                return;
                            }
                            if (idsarr.length > 1) {
                                layer.msg("只能选中一个修改！", { icon: 2 });
                                return;
                            }
                            layer.msg(idsarr.toString(0));

                            layer.open({
                                type: 2,
                                title: '客户修改',
                                shadeClose: true,
                                shade: false,
                                maxmin: true, //开启最大化最小化按钮
                                area: ['893px', '600px'],
                                content: '/Home/CustomerEdit?customerId=' + idsarr.toString(),
                                end: function () {
                                    //表格重载
                                    layui.use(['table'], function () {
                                        var table = layui.table; //where可以传我们像传的任何参数
                                        table.reload("NoRealCustomer", {
                                            url: baseUrl + '/api/customers/noreal?status=1', where: {
                                                headers: { "Authorization": "Bearer " + token }
                                            }
                                        });
                                    });

                                }
                            });


                        }
                        break;
                    case 'visit':
                        layer.msg('客户拜访');
                        break;
                };
            });

        });
    </script>



    <script>

       
        //——————————————————下拉框(员工下拉框,类别下拉框)——————————————————————————————————————

        //下拉框
        $(function () {
            var index = layer.load();
            var token = $.cookie("token");
            //类别下拉框
            $.ajax({
                url: baseUrl + '/api/customers/cate',
                type: 'get',
                contentType: "application/json",
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {
                    layer.close(index);
                    $("#CustomerSegmentationID").empty();
                    $("#CustomerSegmentationID").append('<option value="0">请选择</option>');


                    $("#CustomerSegmentationIDByFind").empty();  //查询那的下拉框
                    $("#CustomerSegmentationIDByFind").append('<option value="0">全部</option>');


                    $(res).each(function () {
                        var line = '<option value="' + this.id + '">' + this.name + '</option>';
                        $("#CustomerSegmentationID").append(line);


                        $("#CustomerSegmentationIDByFind").append(line);//查询那的下拉框
                    });



                }

            }).fail(function () {
                layer.close(index);
            })//类别下拉框


            //员工下拉框
            $.ajax({
                url: baseUrl + '/api/customers/childEmp',
                type: 'get',
                contentType: "application/json",
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {
                    layer.close(index);
                    console.log(res);
                    if (res.code == 0) {
                        $("#EmployeeIDByFind").empty();
                        $("#EmployeeIDByFind").append('<option value="0">全部</option>');

                        $(res.data).each(function () {
                            var line = '<option value="' + this.id + '">' + this.name + '</option>';
                            $("#EmployeeIDByFind").append(line);
                        });
                    } else {
                        $("#EmployeeDiv").remove();  //权限不足，删除盒子
                    }
                }

            }).fail(function () {
                layer.close(index);
            }) //员工下拉框

        })



