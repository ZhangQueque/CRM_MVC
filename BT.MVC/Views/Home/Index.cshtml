@{
    ViewData["Title"] = "仪表盘";
}
<div style=" background-color:#FFFFFF">
    <!-- 页面标题 -->
    <section class="content-header">
        <h1>
            仪表盘
            <small>欢迎您！</small>
        </h1>
    </section>

    <!-- 信息框 -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 id="Record">0</h3>
                        <p>本月业绩</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 id="Customer">0 </h3>
                        <p>客户总数</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-users"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 id="Emp">0</h3>
                        <p>员工总数</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 id="Web"></h3>
                        <p>网站访问量</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div><!-- ./col -->
        </div>

        <!--图表和时钟-->
        <div class="row" style="margin-top:16px">
            <div class="col-md-9">
                <div id="TrackRecordsContainer"></div>
                <div style="margin-left:40px">
                    <button type="button" class="btn btn-default" aria-label="Left Align" title="普通">
                        <span class="glyphicon glyphicon-signal" id="Style1" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default" aria-label="Left Align" title="反转">
                        <span class="glyphicon glyphicon-menu-hamburger" id="Style2" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default" aria-label="Left Align" title="极地">
                        <span class="glyphicon glyphicon-asterisk" id="Style3" aria-hidden="true"></span>
                    </button>
                </div>

            </div>
            <div class="col-md-3">
                <div id="HourContainer"></div>
            </div>
        </div>


        <div class="row" style="margin-top:16px">
            <div class="col-md-7">
                <div id="CustomerContainer" style="height: 400px"></div>

            </div>
            <div class="col-md-5">

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">当日日程</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body" style="display block;overflow:auto;height:318px">
                        <ul class="products-list product-list-in-box">
                            @for (int i = 0; i < 12; i++)
                            {
                                <li class="item">
                                    <div class="product-img">
                                        <img src="https://www.zhangqueque.top:5001/UserImg/1_1_1.png" alt="Product Image">
                                    </div>
                                    <div class="product-info">
                                        <a href="javascript:AlertDetail('@i');" class="product-title">PlayStation 4 <span class="label label-success pull-right">$399</span></a>
                                        <span class="product-description">
                                            PlayStation 4 500GB Console (PS4)
                                        </span>
                                    </div>
                                </li><!-- /.item -->
                            }
                        </ul>
                    </div><!-- /.box-body -->
                    <div class="box-footer text-center" style="display: block;">
                        <a href="javascript::;" class="uppercase">所有日程</a>
                    </div><!-- /.box-footer -->
                </div>

            </div>
        </div>
        <input type="text" id="Inverted" style="display:none" value="@ViewBag.Inverted" />
        <input type="text" id="Polar" style="display:none" value="@ViewBag.Polar" />

    </section><!-- /.content -->
</div>



@section Scripts{

    <script src="https://code.highcharts.com.cn/highcharts/highcharts.js"></script>
    <script src="https://code.highcharts.com.cn/highcharts/highcharts-more.js"></script>
    <script src="https://code.highcharts.com.cn/highcharts/modules/exporting.js"></script>
    <script src="https://img.hcharts.cn/highcharts-plugins/highcharts-zh_CN.js"></script>
    <script src="~/js/index.js"></script>
    


}